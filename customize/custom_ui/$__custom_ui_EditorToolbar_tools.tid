<$button set="$:/config/codemirror/lineWrapping" setTo="true" tooltip="Line Wrap On">WON</$button>
</$reveal>
<$reveal type="match" state="$:/config/codemirror/lineWrapping" text="true">
<$button set="$:/config/codemirror/lineWrapping" setTo="false" tooltip="Line Wrap Off">WOFF</$button>
</$reveal>
<$set name="today" value=<<now YYYY0MM0DD>>><$list filter="[all[current]!tag[Task]has[date]!date<today>]">
<$button style="font-weight:bold;color:brown;">Update Date<<date-update-actions>><$list filter="[<modal>match[yes]]"><$action-deletetiddler $tiddler="$:/state/modal/editor"/></$list></$button>
</$list></$set>
<$reveal state=`$:/state/step-popup/$(currentTiddler)$` type="popup" position="below" animate="yes" tag="div"><div class="tc-drop-down tc-popup-keep">
<div style="margin:3px 0 10px 14px;">Select Type:
<$radio tiddler="$:/temp/step-popup/type" value="a" default="a" actions="<$action-deletetiddler $tiddler='$:/temp/step-popup/tiddlers'/>"> A</$radio>
<$radio tiddler="$:/temp/step-popup/type" value="w" actions="<$action-deletetiddler $tiddler='$:/temp/step-popup/tiddlers'/>"> W</$radio>
<$radio tiddler="$:/temp/step-popup/type" value="d" actions="<$action-deletetiddler $tiddler='$:/temp/step-popup/tiddlers'/>"> D</$radio>
</div>
<hr>
<$list filter="[all[current]getAllTiddlers[]sortan[note]]"><div style="margin:0 14px;">
<$checkbox tiddler="$:/temp/step-popup/tiddlers" listField="list" checked={{!!title}}>
<$transclude field=caption><$view field=title/></$transclude>
<$list filter="[all[current]has[note]]" variable="NONE">@@color:green;[{{!!note}}]@@</$list>
</$checkbox>
</div></$list>
<p><$button actions=<<add-step-actions>> style="text-align:center;">Add Step</$button></p>
</div></$reveal>
</$tiddler></span>