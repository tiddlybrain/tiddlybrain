<$action-sendmessage $message="tm-edit-text-operation" $param="replace-all" text={{{ [all[current]get[text]splitregexp[# \*]join[#*]] }}}/>
<$action-sendmessage $message="tm-edit-text-operation" $param="replace-all" text={{{ [all[current]get[text]splitregexp[\\_]join[_]] }}}/>
<$action-sendmessage $message="tm-edit-text-operation" $param="replace-all" text={{{ [all[current]get[text]splitregexp[\\-]join[-]] }}}/>
